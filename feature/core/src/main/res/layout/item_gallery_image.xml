<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageView_itemGalleryImage"
            android:layout_width="124dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="H, 1:1"
            android:scaleType="center"
            android:tint="#80000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/view_itemGalleryImage_shadowSelectedImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#80000000"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/imageView_itemGalleryImage"
            app:layout_constraintEnd_toEndOf="@id/imageView_itemGalleryImage"
            app:layout_constraintTop_toTopOf="@id/imageView_itemGalleryImage"
            app:layout_constraintBottom_toBottomOf="@id/imageView_itemGalleryImage"/>

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkbox_itemDeleteRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="6dp"
            android:paddingTop="6dp"
            android:gravity="center"
            android:button="@drawable/background_checkbox_pickgalleryimage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>